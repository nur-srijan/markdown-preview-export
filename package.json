{
  "name": "markdown-rich-preview",
  "displayName": "Markdown Rich Preview & Export",
  "description": "GitHub-style Markdown previews with seamless PDF and HTML export",
  "icon": "images/icon.png",
  "version": "1.1.2",
  "publisher": "nur-srijan",
  "author": {
    "name": "Nur Srijan",
    "email": "nursrijan1421@gmail.com",
    "url": "https://nur-srijan.github.io"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nur-srijan/markdown-preview-export.git",
    "bugs": {
      "url": "https://github.com/nur-srijan/markdown-preview-export/issues/new/choose"
    },
    "homepage": "https://github.com/nur-srijan/markdown-preview-export"
  },
  "private": false,
  "engines": {
    "vscode": "^1.80.0"
  },
  "scripts": {
    "clean": "rimraf out",
    "vscode:prepublish": "npm run package",
    "compile": "node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run clean && npm run prepare && npm run check-types && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "prepare": "node ./scripts/copy-vendor.js",
    "build:assets": "node ./scripts/copy-vendor.js",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "test:ci": "node ./scripts/run-tests-ci.js"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/glob": "^9.0.0",
    "@types/highlight.js": "^10.1.0",
    "@types/marked": "^4.0.8",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.0.0",
    "@types/twemoji": "^13.1.1",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^8.44.1",
    "@typescript-eslint/parser": "^5.0.0",
    "@vscode/test-electron": "^2.0.0",
    "@vscode/vsce": "^3.5.0",
    "c8": "^8.0.0",
    "chai": "^4.3.7",
    "esbuild": "^0.21.5",
    "esbuild-plugin-copy": "^2.1.1",
    "eslint": "^8.0.0",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "typescript": "^5.0.0"
  },
  "categories": [
    "Formatters",
    "Programming Languages",
    "Visualization"
  ],
  "keywords": [
    "Markdown",
    "md",
    "Readme",
    "README",
    "Preview",
    "Export",
    "Markdown-to-PDF",
    "Markdown-to-HTML",
    "Vscode",
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "markdown-rich-preview.showPreview",
        "title": "Open Enhanced Preview",
        "category": "Markdown"
      },
      {
        "command": "markdown-rich-preview.exportToHtml",
        "title": "Export to HTML",
        "category": "Markdown"
      },
      {
        "command": "markdown-rich-preview.exportToPdf",
        "title": "Export to PDF",
        "category": "Markdown"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorLangId == 'markdown'",
          "command": "markdown-rich-preview.showPreview",
          "group": "navigation"
        },
        {
          "when": "editorLangId == 'markdown'",
          "command": "markdown-rich-preview.exportToHtml",
          "group": "navigation@2"
        },
        {
          "when": "editorLangId == 'markdown'",
          "command": "markdown-rich-preview.exportToPdf",
          "group": "navigation@3"
        }
      ]
    }
  },
  "dependencies": {
    "highlight.js": "^11.11.1",
    "katex": "^0.16.22",
    "marked": "^11.2.0",
    "marked-katex-extension": "^5.1.4",
    "puppeteer": "^22.0.0"
  }
}
