{
  "name": "markdown-rich-preview",
  "displayName": "Markdown Rich Preview & Export",
  "description": "Enhance your Markdown editing experience with beautiful previews and seamless export options",
  "version": "0.2.0",
  "publisher": "nur-srijan",
  "author": "Nur Srijan",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/nur_srijan/markdown-preview-export.git",
    "keywords": [
      "Markdown",
      "md",
      "Readme",
      "README",
      "Preview",
      "Export",
      "Markdown-to-PDF",
      "Markdown-to-HTML",
      "Vscode",
      "Programming Languages"
    ],
    "bugs": {
      "url": "https://github.com/nur_srijan/markdown-preview-export/issues"
    },
    "homepage": "https://github.com/nur_srijan/markdown-preview-export"
  },
  "screenshots": [
    "images/screenshot.png"
  ],
  "private": false,
  "engines": {
    "vscode": "^1.80.0"
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "build": "node --experimental-modules esbuild.config.mjs",
    "package": "npm run build && vsce package",
    "dev": "npm run watch"
  },
  "devDependencies": {
    "@types/highlight.js": "^10.1.0",
    "@types/marked": "^4.0.8",
    "@types/node": "^18.0.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "@vscode/test-electron": "^2.0.0",
    "@vscode/vsce": "^3.5.0",
    "esbuild": "^0.21.5",
    "esbuild-plugin-copy": "^2.1.1",
    "eslint": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters",
    "Visualization"
  ],

  "main": "./out/extension.js",
  "activationEvents": [
    "onCommand:markdown-rich-preview.showPreview",
    "onCommand:markdown-rich-preview.exportToHtml",
    "onCommand:markdown-rich-preview.exportToPdf"
  ],
  "contributes": {
    "commands": [
      {
        "command": "markdown-rich-preview.showPreview",
        "title": "Open Enhanced Preview",
        "category": "Markdown"
      },
      {
        "command": "markdown-rich-preview.exportToHtml",
        "title": "Export to HTML",
        "category": "Markdown"
      },
      {
        "command": "markdown-rich-preview.exportToPdf",
        "title": "Export to PDF",
        "category": "Markdown"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "when": "editorLangId == 'markdown'",
          "command": "markdown-rich-preview.showPreview",
          "group": "navigation"
        },
        {
          "when": "editorLangId == 'markdown'",
          "command": "markdown-rich-preview.exportToHtml",
          "group": "navigation@2"
        },
        {
          "when": "editorLangId == 'markdown'",
          "command": "markdown-rich-preview.exportToPdf",
          "group": "navigation@3"
        }
      ]
    }
  },
  "dependencies": {
    "highlight.js": "^11.11.1",
    "katex": "^0.16.22",
    "marked": "^11.2.0",
    "marked-katex-extension": "^5.1.4",
    "puppeteer": "^22.0.0"
  }
}
